<Window x:Class="VMS.View.ProgressWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Width="480" Height="24" ShowInTaskbar="False" WindowStyle="None" Background="#7FFFFFFF"
		ResizeMode="NoResize" WindowStartupLocation="CenterOwner" PreviewKeyDown="Window_PreviewKeyDown" AllowsTransparency="True">
	<DockPanel>
		<TextBlock Name="MessageText" DockPanel.Dock="Right" Margin="5,0" Foreground="DarkBlue" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<ProgressBar IsIndeterminate="True" />
	</DockPanel>
</Window>

<Window x:Class="VMS.View.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMS.View"
        mc:Ignorable="d"
        Title="InputWindow" Height="200" Width="720" ResizeMode="NoResize" FontSize="24" WindowStyle="ThreeDBorderWindow" WindowStartupLocation="CenterScreen" >
	<Window.Background>
		<ImageBrush ImageSource="/TSVNCache;component/Images/Background.png"/>
	</Window.Background>

	<Grid Name="Panel">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel Name="InputGrid" Orientation="Vertical" VerticalAlignment="Center"/>
		<Button Grid.Row="1" IsCancel="True" IsDefault="True" Content="关闭" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="2" Padding="12,0"/>
	</Grid>
</Window>
